@{
    ViewData["Title"] = "Delete Appointment";
}

@model SignUp

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the appointment for @Model.Appointment.Date at @Model.Appointment.Time? </h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="AppointmentList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="SignUpId" />
</form>