@{
    ViewData["Title"] = "Sign Up";
}
@model List<TempleSignup_Mission12_.Models.Appointment>

<h1>
    this is the sign up page
</h1>




@for (int i = 0; i < 89; i++)
{
    <p>@ViewBag.Days[i]</p>

    <div class="row">
        <div class="col">
            <p>Times Booked:</p>
        </div>
        <div class="col">
            <p>Slots Available:</p>
        </div>
    </div>
    
    @foreach (var x in Model)
    {
        @if (x.Date == ViewBag.Days[i])
        {
            <div class="row">
                <div class="col">
                    <p>@x.Time.TimeSlot</p>
                </div>
                <div class="col">
                    <p>@x.Slots</p>
                </div>
            </div>
            
        }
        

    }
    <br />
}
